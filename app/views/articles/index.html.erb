<h1>Articles List</h1>

<table>
   <thead>
      <tr>
         <th>Title</th>
         <th>Description</th>
         <th>Actions</th>
    </tr>
   </thead>

   <tbody>
     <% @articles.each do |c| %>
   <tr>
      <td><%= c.title %></td>
      <td><%= c.description %></td>
      <td><%= link_to 'Create', new_article_path(c) %></td>
      <td><%= link_to 'Edit', edit_article_path(c) %></td>
       <td><%= link_to 'Show', article_path(c) %></td>
      <td><%= link_to 'Delete', article_path(c), method: :delete, data: { confirm: 'Are you sure Smasem?' } %></td>
    </tr>
    <% end %>
   </tbody>



